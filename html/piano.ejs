        <div class="row">
          <div class="pair"><label for="metroBtn">Control</label><button id="metroBtn" class="secondary">Start</button></div>
          <div class="pair"><label for="bpm">BPM</label><input id="bpm" type="range" min="20" max="300" step="1" value="120"></div>
